<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>

<?import java.lang.String?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.BorderPane?>
<BorderPane prefHeight="-Infinity" prefWidth="-Infinity" fx:controller="com.example.loginpagejavafx.SignUpController" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox id="VboxContainer" prefHeight="300" maxWidth="350" alignment="CENTER" xmlns="http://javafx.com/javafx/16" spacing="10" >
            <Text fx:id="welcomingText">
                Sign Up
            </Text>
            <HBox spacing="10">
                <TextField fx:id="firstnameField" promptText="First Name" maxWidth="170"/>
                <TextField fx:id="lastnameField" promptText="Last Name" maxWidth="170"/>
            </HBox>
            <TextField fx:id="usernameField" promptText="Username" maxWidth="350" minWidth="300"/>
            <TextField fx:id="dateofbirthField" promptText="Date of Birth" maxWidth="350" minWidth="300"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="350" minWidth="300"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" maxWidth="350" minWidth="300"/>
            <Button fx:id="signupButton" text="Sign Up" onAction="#signup"/>
            <BorderPane>
                <left>
                    <Text fx:id="alreadyHaveAccount">
                        <String fx:value="Already have an account?"></String>
                    </Text>
                </left>
                <right>
                    <HBox>
                        <Text id="haveAccountText">
                            <String fx:value="Log In"></String>
                        </Text>
                        <Button id="logInLink">
                            Log In
                        </Button>
                    </HBox>
                </right>
            </BorderPane>
        </VBox>
    </center>
</BorderPane>
